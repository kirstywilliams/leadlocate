<div class="col-md-12 authentication">
	<h1 class="text-xlarge">
	    Send Invitation
	</h1><!-- ./h1 -->
	<div class="col-md-6 col-md-offset-3 panel panel-default">
		<div class="panel-body">

			<%= simple_form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => { :method => :post }, wrapper_mappings: { boolean: :vertical_boolean } do |f| %>

				<%= f.input :email, label: false do %>
			        <div class="input-group">
			        	<%= f.input_field :email, class: 'form-control input-lg', placeholder: 'Email' %>
			          	<span class="input-group-addon glyphicon glyphicon-user"></span>
			        </div>
			    <% end %>
				<%= f.button :submit, "Invite User", class: 'btn-primary btn-block btn-lg' %>
			<% end %>
		</div><!-- ./panel-body -->
	</div><!-- ./panel -->
</div><!-- ./authentication -->