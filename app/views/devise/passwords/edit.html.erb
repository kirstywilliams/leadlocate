<div class="col-md-12 authentication">
  <h1 class="text-xlarge">
    Change your password
  </h1><!-- ./h1 -->
  <div class="col-md-4 col-md-offset-4 well signin">

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put })) do |f| %>

      <%= f.input :reset_password_token, as: :hidden %>
      <%= f.full_error :reset_password_token %>

      <%= f.input :password, label: false do %>
        <div class="input-group">
          <%= f.input_field :password, class: 'form-control input-lg', placeholder: 'New password', autofocus: true %>
          <span class="input-group-addon glyphicon glyphicon-lock"></span>
        </div>
      <% end %>

      <%= f.input :password_confirmation, label: false do %>
        <div class="input-group">
          <%= f.input_field :password_confirmation, class: 'form-control input-lg', placeholder: 'Confirm your password' %>
          <span class="input-group-addon glyphicon glyphicon-lock"></span>
        </div>
      <% end %>

        <%= f.button :submit, "Change my password", class: 'btn-primary btn-block btn-lg' %>
      </div>
    <% end %>

    <%= flash_messages layout_flash: false %>

    <%= render "devise/shared/links" %>
  </div><!-- ./signin -->
</div><!-- ./authentication -->
