<div class="col-md-12 new-account">
  <h1 class="text-xlarge">
    Create an Account
  </h1><!-- ./h1 -->
  <div class="col-md-6 col-md-offset-3 panel panel-default">
    <div class="panel-body">

      <%= simple_form_for @account do |f| %>
        <%= f.fields_for :owner do |o| %>
          <%= o.input :name %>
          <%= o.input :email%>
          <%= o.input :password %>
          <%= o.input :password_confirmation %>
        <% end %>

        <%= f.input :subdomain do %>
          <div class="input-group">
            <%= f.input_field :subdomain, class: 'form-control' %>
            <span class="input-group-addon">.leadlocate.dev</span>
          </div>
        <% end %>
        <%= f.button :submit, class: 'btn-primary' %>
      <% end %><!-- ./form -->
    </div><!-- ./panel-body -->
  </div><!-- ./panel -->
</div><!-- ./new-account -->